{
  "name": "zomma-prototype",
  "version": "1.0.0",
  "description": "Zomma Management Portal Monorepo",
  "private": true,
  "scripts": {
    "install": "npm --prefix backend install && npm --prefix frontend install",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:backend && npm run build:frontend",
    "build:staging:backend": "cd backend && npm run build:staging",
    "build:staging:frontend": "cd frontend && npm run build:staging",
    "build:staging": "npm run build:staging:backend && npm run build:staging:frontend",
    "start:backend": "cd backend && npm run start:prod",
    "start:backend:staging": "cd backend && npm run start:staging",
    "start:frontend": "cd frontend && npm run preview",
    "start": "node start.js",
    "start:staging": "NODE_ENV=staging node start.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "serve-static": "^1.15.0"
  }
}
